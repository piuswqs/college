<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Splash" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowBackground">@color/sm_blue</item>
    </style>
    <style name="font_skip">
        <item name="android:textSize">20sp</item>
