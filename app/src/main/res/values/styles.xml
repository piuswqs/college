    <style name="title_for_createpassword">
        <item name="android:textSize">24sp</item>
        <item name="android:letterSpacing">0</item>
        <item name="android:textColor">#000000</item>
    </style>
    <style name="font_for_reg">
        <item name="android:textSize">24sp</item>
        <item name="android:letterSpacing">0</item>
        <item name="android:textColor">#000000</item>
    </style>
    <style name="font_for_skip_inreg">
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">#1A6FEE</item>
    </style>
    <style name="styleRoundedCornerButton" parent="@style/Widget.AppCompat.Button.Colored">
        <item name="background">@drawable/button_blue_roundedcorn</item>
        <item name="colorButtonNormal">#1A6FED</item>
        <item name="colorControlHighlight">#1A6FED</item>
    </style>
    <style name="styleDescriptionTitle">
        <item name="android:textSize">20sp</item>
        <item name="android:letterSpacing">0</item>
        <item name="android:textColor">#000000</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="styleBasketTitle">
        <item name="android:textSize">24sp</item>
        <item name="android:letterSpacing">0</item>
        <item name="android:textColor">#000000</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="styleTitleBasketCustomItem">
        <item name="android:textSize">16sp</item>
        <item name="android:letterSpacing">0</item>
        <item name="android:textColor">#000000</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="BottomSheetDialogTheme" parent="Theme.Material3.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/BottomSheetStyle</item>
    </style>
    <style name="BottomSheetStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@color/trans</item>
    </style>
